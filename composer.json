{
    "name": "josecl/php-cs-fixer-custom-fixers",
    "type": "library",
    "description": "Set de reglas opinadas para PHP Coding Standards Fixer",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "ext-json": "*",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.8",
        "roave/security-advisories": "dev-latest"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "Josecl\\PhpCsFixerCustomFixers\\": "src"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "lint": "./vendor/bin/php-cs-fixer fix --no-interaction --verbose"
    }
}
